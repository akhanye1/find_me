	<ui id="ui.findmelocator.gps.not.supported"
		template="ocep.phone.result"
		persistance="NONE"
		class="za.co.fnb.pe.framework.util.views.ResultView" >

		<!--  Navigation Section -->
		<title text="GPS Location" />
		<leftbutton type="NAVIGATE"
					text="Back"
